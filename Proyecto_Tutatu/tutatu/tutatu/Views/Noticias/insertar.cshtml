
@{
    ViewBag.Title = "insertar";
}

<h2>Insertar nueva Noticia</h2>

<div class="container">
    <div class="jumbotron">
        <form action="" method="post" class="form-horizontal" title="Nueva noticia">
            <div class="row">
                <div class="col-xs-12 col-sm-6">
                    Asunto: <input type="text" class="form-control" name="asunto" id="asunto" value="" placeholder="Asunto..." />
                    Elije sobre que:
                    <select id="zona" name="zona" class="form-control">
                        <option value="1">tatu</option>
                        <option value="2">tatuador</option>
                        <option value="3">tatuaje</option>
                    </select>
                </div>
               
               
                <div class="col-xs-12 col-sm-6">
                    Contenido: <textarea class="form-control" rows="15" name="txt" id="txt" value="" placeholder="Noticia...." ></textarea>
                </div>
            </div>
            
            </br>
            <div class="row">
                <div class="form-group">
                    <div class="col-sm-4">
                        <input type="submit" class="btn btn-default btn-block" value="Enviar" />
                    </div>
                    <div class="col-sm-4">
                        <input type="reset" class="btn btn-default btn-block" value="Vaciar" />
                    </div>
                    
                    <div class="col-sm-4 text-right">
                        <input type="button" class="btn btn-default btn-block" onClick="history.back()" value="Volver" />

                    </div>


                </div>

            </div>
            <input type="text" name="idu" id="idu" value="@ViewBag.USER" hidden/>
        </form>



    </div>
</div>

