@using Inicio.Models;
@{
    ViewBag.Title = "Edit";
}

<h2>Editar </h2>
  <div>
    @if (!ViewBag.OK)
    {
        <p>ErrorEventArgs: @ViewBag.MENSAJE;</p>
    }
    else
    { 
    <div>
        <form class="form-group" method="post" action="" id="form-edit" title="Edit">
            <p class="message">
                Datos a cambiar.
            </p>
            <p></p>
            Id :<input class="form-control" type="text" name="id" id="id" value="@ViewBag.DATOS.idEmpleado" placeholder="Id" disabled />
            Apellido :<input class="form-control" type="text" name="Apellido" id="Apellido" value="@ViewBag.DATOS.Apellido" placeholder="Apellido" />
            Nombre :<input class="form-control" type="text" name="Nombre" id="Nombre" value="@ViewBag.DATOS.Nombre" placeholder="Nombre" />
            <hr/>
           
            <button class="btn btn-success" type="submit">Editar Empleado</button>


        </form>
    </div>
    }
</div>

